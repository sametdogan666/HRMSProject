@model Entities.Concrete.Job
@{
    ViewData["Title"] = "UpdateJob";
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
}

<div class="container">
    <br />
    <h3>Pozisyon Güncelleme Sayfası</h3>
    <br /><br />
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <label>Pozisyon Adı</label>
        <input type="text" class="form-control" asp-for="JobName" style="background-color:darkgray" />
        <br />
        <br />
        <button class="btn btn-primary">Güncelle</button>
        <a href="/Job/Index" class="btn btn-warning">Değişikliklerden Vazgeç</a>
    </form>
</div>


