@model List<Entities.Concrete.AppUser>
@{
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Rol Detayları</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <th>@item.FullName</th>
                <th><a href="/Role/AssignRole/@item.Id" class="btn btn-dark">Rol Ata</a></th>
            </tr>
        }
    </table>
</div>
