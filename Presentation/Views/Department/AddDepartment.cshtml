@model Entities.Concrete.Department
@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
}

<div class="container">
    <br/>
    <h3>Departman Ekleme Sayfası</h3>
    <br/><br/>
    <form method="post">

        <label>Departman Adı</label>
        <br/>
        <input asp-for="DepartmentName" class="form-control" style="background-color:#b1b3b1"/>
        <br/><br/>
        <button class="btn btn-info">Kaydet</button>
        <a href="/Department/Index/" class="btn btn-warning">Değişikliklerden Vazgeç</a>
    </form>

</div>

