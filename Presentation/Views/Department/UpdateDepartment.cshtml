@model Entities.Concrete.Department
@{
    ViewData["Title"] = "UpdateDepartment";
    Layout = "~/Views/Shared/_AdminTemplateLayout.cshtml";
}

<div class="container">
    <br/>
    <h3>Departman Güncelleme Sayfası</h3>
    <br/><br/>
    <form method="post">
        <input type="hidden" asp-for="Id"/>
        <label>Departman Adı</label>
        <input type="text" class="form-control" asp-for="DepartmentName" style="background-color:darkgray"/>
        <br/>
        <br/>
        <button class="btn btn-primary">Güncelle</button>
        <a href="/Department/Index" class="btn btn-warning">Değişikliklerden Vazgeç</a>
    </form>
</div>


